<html xmlns="http://www.w3.org/1999/xhtml" ng-app="DS3Planner">
<head>
    <title>DS3Planner</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/lib/bootstrap/dist/css/bootstrap-theme.min.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />
    <base href="/" />

    <!-- Library Files -->
    <script src="~/lib/angular/angular.js"></script>
    <script src="~/lib/angular-resource/angular-resource.js"></script>
    <script src="~/lib/angular-animate/angular-animate.js"></script>
    <script src="~/lib/angular-touch/angular-touch.js"></script>
    <script src="~/lib/angular-bootstrap/ui-bootstrap-tpls.js"></script>
    <script src="~/lib/angular-ui-router/release/angular-ui-router.js"></script>

    <!-- App Files-->
    <script src="~/ngapp/app.js"></script>
    <script src="~/ngapp/controllers/controllers.js"></script>
    <script src="~/ngapp/services/services.js"></script>


    <!-- Security -->
    <script src="~/ngapp/controllers/accountcontroller.js"></script>
    <script src="~/ngapp/services/accountservice.js"></script>

    

</head>
<body ng-controller="AccountController as account">
    <div class="container">
        <h1>DS3Planner</h1>
        @*<div>
          <span style="cursor:pointer;" ui-sref="home">Home</span> /
           <span style="cursor:pointer;" ui-sref="about">About</span>

           / <a href="/secret">Secret</a> /
           <a href="/login" ng-show="!account.isLoggedIn()">Login</a>
           <a href="#" ng-click="account.logout()" ng-show="account.isLoggedIn()">Logout</a>
           <div ng-show="account.isLoggedIn()">
               [{{account.getUserName()}}]
           </div> 
        </div>*@
        <nav id="navbar-main" class="navbar navbar-inverse" data-spy="affix" data-offset-top="69">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" ng-init="isCollapsed = true" ng-click="isCollapsed = !isCollapsed">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                </div>
                <div class="navbar-collapse" ng-class="{collapse: isCollapsed}">
                    <ul class="nav navbar-nav">
                        <li><a ui-sref="home">Home</a></li>
                        <li><a ui-sref="about">About</a></li>
                        <li><a ui-sref="secret">Builds</a></li>
                        <li><a ui-sref="login" ng-show="!account.isLoggedIn()">Login</a></li>
                        <li><a ui-sref="home" ng-click="account.logout()" ng-show="account.isLoggedIn()">Logout</a></li>
                        <li>
                            <a ng-show="account.isLoggedIn()">
                                [{{account.getUserName()}}]
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
        <hr />

    </div>
    <div class="container">
        <ui-view></ui-view>
    </div>
</body>
</html>
